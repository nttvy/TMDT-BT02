<% content_for :title, "Log in - IsaBéry" %>

<!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <div class="container">
					<div class="row">
						<div class="col-sm-6 col-md-4 col-md-offset-4">
                            <% if flash[:error].present? %>
                                <div class="alert alert-danger" role="alert"><%= flash[:error] %></div>
                            <% end %>

							<h1 class="text-center login-title">Log in to continue to IsaBéry</h1>
							<div class="account-wall">
								<img class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
									alt="">
                                <%= form_tag sessions_path, class: "form-signin" do %>
                                    <%= email_field_tag :email, params[:email], class: "form-control", placeholder: "Enter your email", required: true, autofocus: true %>
                                    <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter your password", required: true %>
                                    <%= submit_tag "Log in", class: "btn btn-lg btn-primary btn-block" %>
                                <% end %>
							</div>
                            <%= link_to "Create an account", signup_path, class: "text-center new-account" %>
                            <%= link_to "Sign in with Twitter", "/auth/twitter", class: "text-center new-account" %>
						</div>
					</div>
				</div>

            </div>

        </div>
        <!-- /.row -->
    </div>