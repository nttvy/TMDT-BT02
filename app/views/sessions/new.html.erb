<% content_for :title, "Log in - IsaBéry" %>

<!-- Page Content -->
    <div class="container">

        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <div class="container">
					<div class="row">
						<div class="col-sm-6 col-md-4 col-md-offset-4">
                            <% if flash[:error].present? %>
                                <div class="alert alert-danger" role="alert">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    <%= flash[:error] %>
                                </div>
                            <% end %>

							<h1 class="text-center login-title">Log in to continue to IsaBéry</h1>
							<div class="account-wall">
                                <%= image_tag "profile_default.jpg", class: "profile-img" %>
                                <%= form_tag sessions_path, class: "form-signin" do %>
                                    <%= email_field_tag :email, params[:email], class: "form-control", placeholder: "Enter your email", required: true, autofocus: true %>
                                    <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter your password", required: true %>
                                    <%= submit_tag "Log in", class: "btn btn-lg btn-primary btn-block" %>
                                <% end %>
                                <div class="divOr">
                                    <hr class="hrOr">
                                    <span class="spanOr">OR</span>
                                </div>
                                <div class="form-signin">
                                    <%= link_to "/auth/twitter", class: "btn btn-lg btn-block btn-twitter" do %>
                                     <%= icon "twitter" %> Log in with Twitter
                                    <% end %>
                                </div>
							</div>
                            <%= link_to "Create an account", signup_path, class: "text-center new-account" %>
						</div>
					</div>
				</div>

            </div>

        </div>
        <!-- /.row -->
    </div>